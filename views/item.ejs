<!DOCTYPE html>
<html lang="en">

<head>
    <title>Fashion View Shop</title>
    <%- include('./partials/head') %>
</head>

<body>
    <!-- HEADER SECTION  -->
    <header class="header">
        <div class="header-1">
            <a href="#" class="logo"><i class="fa-brands fa-foursquare fa-beat"></i>ashi&#xf8;&#x014B; View</a>
            <form action="" class="search-form">
                <input type="search" name="" placeholder="Search here....." id="search-box">
                <label form="search-box" class="fas fa-search"></label>
            </form>
            <div class="icons">
                <div id="search-btn" class="fas fa-search"></div>
                <a href="#" class="fas fa-heart"></a>
                <a href="#" class="fas fa-shopping-cart"></a>
                <a href="/user/login" class="fas fa-user"></a>
            </div>
        </div>
    </header>
    <!-- HEADER SECTION ENDS  -->

    <section class="itemPreview">
        <% if (locals.item) { %>
            <div class="itemPreviewDiv1">
                <% item.Product_ImgPaths.forEach(paths => { %>
                 <div>
                    <img src="/<%= paths %>" alt="" width="100%">
                 </div>
                <% }) %>
            </div>
            <div class="itemPreviewDiv2">
                <h1><%= item.Product_Name %></h1>
                <h4><%= item.Product_Size_Type %></h4>
                <div class="line"></div>
                <h3>Price: <%= item.Product_Price %> <span><%= item.Product_CutPrice %></span></h3>
                <p>Please select a size:</p>
                <% item.Product_Sizes.forEach(element => { %>
                 <button><%= element %></button>
                <% }) %>

            </div>
            <% } %>
    </section>

    <!-- HOMEGROWN SECTION  -->
    <section class="Homegrown">
        <div class="container">
            <div>
                <h5>HOMEGROWN INDIAN BRAND</h5>
            </div>
            <div>
                <h5>OVER 100K HAPPY CUSTOMERS</h5>
            </div>
        </div>
    </section>
    <!-- HOMEGROWN SECTION ENDS  -->

    <!-- FOOTER SECTION  -->
    <footer>
        <div class="footer">
            <div class="footer-div">
                <h4>Contact</h4>
                <p><strong>Address:</strong> 30, Vaishnav Vihar, Jhotwara, Jaipur</p>
                <p><strong>Phone:</strong> +916378952948</p>
                <p><strong>Hours:</strong> 24*7</p>
                <h4>Follow Us</h4>
                <a href="#"><i class="fa-brands fa-facebook"></i></a>
                <a href="#"><i class="fa-brands fa-square-instagram"></i></a>
                <a href="#"><i class="fa-brands fa-linkedin"></i></a>
            </div>
            <div class="footer-div links">
                <h4>About</h4>
                <a href="#">
                    About us
                </a>
                <a href="#">
                    Delivery Information
                </a>
                <a href="#">
                    Privacy Policy
                </a>
                <a href="#">
                    Terms & Condition
                </a>
                <a href="#">
                    Contact Us
                </a>
            </div>
            <div class="footer-div links">
                <h4>My Account</h4>
                <a href="#">
                    Sign in
                </a>
                <a href="#">
                    View Cart
                </a>
                <a href="#">
                    My Wishlist
                </a>
                <a href="#">
                    Track My Order
                </a>
                <a href="#">
                    Help
                </a>
            </div>
            <div class="footer-div">
                <p>Secure Payment With </p>
                <img src="/images/1-removebg-preview.png">
                <p>Shipping Partners </p>
                <img src="/images/2-removebg-preview.png">
            </div>
        </div>
    </footer>
    <!-- FOOTER SECTION ENDS  -->

    <!-- COPYRIGHT SECTION  -->
    <div class="copyright">
        <p>&copy; 2023 Developed By Rajeev Prajapat</p>
    </div>
    <!-- COPYRIGHT SECTION ENDS  -->

    <%- include('./partials/script.js') %>


</body>

</html>